<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<header class="navigation" role="banner">
  <div class="navigation-wrapper" id="navigation-wrapper-2">
    <a href="javascript:void(0)" class="logo">
      <img src="http://static.iconsplace.com/icons/preview/orange/idea-256.png" alt="Logo Image">
    </a>
    <a href="javascript:void(0)" class="navigation-menu-button" id="js-mobile-menu">MENU</a>
    <nav role="navigation">
      <ul id="js-navigation-menu" class="navigation-menu show">
        
        <li class="nav-link"> 
          <%= link_to 'Home', ideas_path  %>
        </li>

        <li class="nav-link"> 
          <%= link_to 'Submit idea', new_idea_path  %>
        </li>

        <% if current_user %>
          <li class="nav-link">           
            <%= link_to 'My profile', current_user %>
            <span id="email_when_logged_in">Logged in as <%= current_user.email %></span>           
          </li>
        <% end %>

        <% if current_user %>
          <li class="nav-link">
            <%= link_to "Log out", destroy_user_session_path, method: :delete %>
          </li>
        <% end %>

        <% if current_user ==nil %>
          <li class="nav-link">
          <%= link_to "Sign In", new_user_session_path %>
          </li>
        <% end %>

        <% if current_user ==nil %>
          <li class="nav-link">
          <%= link_to "Register", new_user_registration_path %>
          </li>
        <% end %>

      </ul>
    </nav>
    <div class="navigation-tools">
      <div class="search-bar">
        <%= search_form_for @q, :html => {:role => "search"} do |f| %>
        <%= f.text_field :title_cont, placeholder: "Search for an idea", :type => "search" %>
        <%= f.submit :style => "display: none;" %>    
        <% end %>
      </div>
    </div>
  </div>
</header>
